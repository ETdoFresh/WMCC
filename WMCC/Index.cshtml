@{
    Layout = null;
    var class1 = new WMCC.Class1();
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <h3>WMCC^EREFRESH|GetServerVersion&lt;Client Quit&gt;</h3>
        <ul>
            <li>@class1.version</li>
            <li>@class1.build</li>
            <li>@class1.tvDirectory</li>
            <li>@class1.macAddress</li>
        </ul>
        <h3>WMCC^EREFRESH|GetChannels&lt;Client Quit&gt;</h3>
        <ul>
            @foreach (var channel in class1.channels)
            {
                if (channel != class1.channels[0])
                {
                    <li style="list-style-type:none">&nbsp;</li>
                }
                <li>@channel.id</li>
                <li>@channel.fullChannel</li>
                <li>@channel.description</li>
                <li><a href="@channel.url">@channel.url</a></li>
            }
        </ul>

        <h3>@string.Format($"WMCC^@EREFRESH@|GetEntries|30450|{DateTimeOffset.UtcNow.ToUnixTimeSeconds()}|{DateTimeOffset.UtcNow.AddDays(1).ToUnixTimeSeconds()}<Client Quit>")</h3>
        <ul>
            @foreach (var show in class1.shows)
            {
                <li>@show.id @show.startTime @show.title @show.episode</li>
            }
        </ul>
    </div>
</body>
</html>
